# Application Settings
APP_NAME=Financial Forecasting & Risk Analytics Engine
APP_VERSION=0.1.0
DEBUG=False

# Server Settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Database Configuration
# PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://forecasting_user:secure_password@localhost:5432/forecasting_db

# Alternative: SQLite for local development (uncomment to use)
# DATABASE_URL=sqlite:///./forecasting.db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHE=False

# Logging Configuration
LOG_LEVEL=INFO

# Model Storage
MODEL_DIRECTORY=./models

# Environment
ENVIRONMENT=development
